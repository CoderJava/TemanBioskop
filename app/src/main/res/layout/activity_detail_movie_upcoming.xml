<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ysn.temanbioskop.views.submenu.home.detail.movie.upcoming.DetailMovieUpcomingActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout_activity_detail_movie_upcoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view_background_activity_detail_movie_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_coming_soon" />

                <ImageView
                    android:id="@+id/image_view_background_placeholder_activity_detail_movie_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/black" />

                <LinearLayout
                    android:id="@+id/linear_layout_container_text_activity_detail_movie_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <!--title movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_title_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--genre movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Genre"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_genre_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--homepage movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Homepage"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_homepage_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--overview movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Overview"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_overview_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--production companies movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Production Companies"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_production_companies_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--production countries movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Production Countries"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_production_countries_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--release date movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Release Date"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_release_date_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                    <!--spoken language movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Spoken Language"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_view_spoken_language_activity_detail_movie_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:fitsSystemWindows="true"
                app:scrimVisibleHeightTrigger="200dp"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginBottom="32dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/image_view_poster_activity_detail_movie_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_coming_soon"
                    app:layout_collapseMode="parallax" />

                <!--<android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="4dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
