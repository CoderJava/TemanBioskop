<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ysn.temanbioskop.views.submenu.home.detail.movie.discover.DetailMovieDiscoverActivity">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_view_background_activity_detail_movie_discover"
                    android:src="@drawable/pict2_poster"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_view_background_placeholder_activity_detail_movie_discover"
                    android:src="@drawable/black"
                    android:scaleType="centerCrop"
                    android:alpha="0.8"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    >

                    <!--title movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_title_activity_detail_movie_discover"
                        android:text="Jurassic World"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />

                    <!--genre movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_genre_activity_detail_movie_discover"
                        android:text="Action\nAdventure\nScience Fiction\nThriller"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />
                    
                    <!--homepage movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Homepage"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_homepage_activity_detail_movie_discover"
                        android:text="http://www.jurassicworld.com/"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />

                    <!--overview movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overview"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_overview_activity_detail_movie_discover"
                        android:text="Twenty-two years after the events of Jurassic Park, Isla Nublar now features a fully functioning dinosaur theme park, as originally envisioned by John Hammond"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />

                    <!--production companies movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Production Companies"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_production_companies_activity_detail_movie_discover"
                        android:text="Universal Studios\nAmblin Entertainment\nLegendary Pictures\nFuji Television Network\nDentsu"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />

                    <!--production countries movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Production Countries"
                        android:textColor="@color/colorGrey500"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_production_countries_activity_detail_movie_discover"
                        android:text="United States of America"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />

                    <!--release date movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release Date"
                        android:textSize="13sp"
                        android:textColor="@color/colorGrey500"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_release_date_activity_detail_movie_discover"
                        android:text="2015-06-09"
                        android:textSize="15sp"
                        android:textColor="@color/colorGrey200"
                        />

                    <!--spoken language movie-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spoken Language"
                        android:textSize="13sp"
                        android:textColor="@color/colorGrey500"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_spoken_language_activity_detail_movie_discover"
                        android:text="English"
                        android:textColor="@color/colorGrey200"
                        android:textSize="15sp"
                        />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginBottom="32dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_view_poster_activity_detail_movie_discover"
                    android:src="@drawable/pict2_poster"
                    android:scaleType="fitXY"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="4dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>