        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_form_input_nama_kota"
            android:alpha="0.8"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >


            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_input_nama_kota"
                android:hint="Masukkan nama kota"
                android:textColorHint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/vertical_margin_input_nama_kota"
                android:layout_marginRight="@dimen/horizontal_margin_input_nama_kota"
                android:layout_marginBottom="@dimen/vertical_margin_input_nama_kota"
                android:layout_marginLeft="@dimen/horizontal_margin_input_nama_kota"
                />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_cari_jadwal_bioskop"
                android:text="Cari"
                android:textColor="@android:color/white"
                android:background="@drawable/background_button_cari_jadwal_bioskop"
                android:layout_below="@+id/edittext_input_nama_kota"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/vertical_margin_input_nama_kota"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                />

        </RelativeLayout>

