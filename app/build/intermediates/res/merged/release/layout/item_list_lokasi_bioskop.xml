<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_vertical_margin"
    android:paddingRight="@dimen/item_horizontal_margin"
    android:paddingBottom="@dimen/item_vertical_margin"
    android:paddingLeft="@dimen/item_horizontal_margin"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout_place_item_list_lokasi_bioskop"
                android:paddingTop="@dimen/item_vertical_margin"
                android:paddingRight="@dimen/item_horizontal_margin"
                android:paddingBottom="@dimen/item_vertical_margin"
                android:paddingLeft="@dimen/item_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_place_red_24dp"
                    android:id="@+id/image_view_icon_place_item_list_lokasi_bioskop"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_horizontal_margin"
                    android:id="@+id/text_view_nama_bioskop_item_list_lokasi_bioskop"
                    android:layout_toRightOf="@+id/image_view_icon_place_item_list_lokasi_bioskop"
                    android:text="Jalan Klambir 5"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view_divider_1_item_list_lokasi_bioskop"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear_layout_place_item_list_lokasi_bioskop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout_harga_item_list_lokasi_bioskop"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@id/view_divider_1_item_list_lokasi_bioskop"
                android:paddingTop="@dimen/item_vertical_margin"
                android:paddingRight="@dimen/item_horizontal_margin"
                android:paddingBottom="@dimen/item_vertical_margin"
                android:paddingLeft="@dimen/item_horizontal_margin"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_attach_money_red_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_harga_tiket_bioskop"
                    android:layout_marginLeft="@dimen/item_horizontal_margin"
                    android:text="Rp.60,000,-"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout_waktu_item_list_lokasi_bioskop"
                android:layout_below="@+id/linear_layout_harga_item_list_lokasi_bioskop"
                >

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_access_time_red_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_horizontal_margin"
                        android:id="@+id/text_view_jam_item_list_lokasi_bioskop"
                        android:text="13:00"
                        android:textSize="16sp"/>

                </LinearLayout>-->

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>