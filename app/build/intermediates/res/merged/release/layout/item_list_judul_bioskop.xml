<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_item_list_judul_bioskop"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    app:cardPreventCornerOverlap="false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout_background_list_judul_bioskop"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_view_poster_film_bioskop"
            android:scaleType="centerCrop"
            android:src="@drawable/image_header_main_activity_example"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_judul_film_bioskop"
            android:text="Iron Man 3"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:paddingBottom="@dimen/item_vertical_margin"
            android:paddingTop="@dimen/item_vertical_margin"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="#424242"
            android:alpha="0.8"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>